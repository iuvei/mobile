.exchange-dialog

  .dialog-body

    .item
      display flex
      line-height 30px
      align-items center

      .label
        flex 1

      .value
        font-size 16px
        flex 3
        margin-left 15px

        .name
          margin-left 10px

        .field
          padding 0 9px
          border 0.5px solid
          height 27px
          border-radius 4px

        .recycl-btn
          height 27px
          line-height 14px
          text-align center
          border 0.5px solid
          padding 3px 14px
          float right
          border-radius 14px
          font-size 12px

    .fast
      display flex
      justify-content space-between
      margin-top 14px
      margin-bottom 8px

      .btn
        width 70px
        height 27px
        line-height 27px
        border 0.5px solid
        border-radius 2px

        &.blue
          border 0

    .tip
      font-size 12px
      line-height 30px

  .dialog-footer
    display flex
    justify-content space-between
    padding 13px 0 15px
    border-top 0.5px solid #EDEDED

    .btn
      line-height 40px
      height 40px
      border-radius 3px
      border 1px solid
      font-size 16px
      padding 0 8px

      &:nth-of-type(2)
        padding 0 14px

      &.blue
        color #ffffff !important