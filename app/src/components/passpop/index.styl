.pop-window
  display block
  height 100%
  overflow hidden
  position absolute

  .pop-bg
    position fixed
    z-index 499
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.5)

    &.animated
      animation-duration 0.5s

  .pop-box
    position fixed
    z-index 500
    bottom 0
    width 100%
    height auto
    background-color #f5f5f5

    &.animated
      animation-duration 0.5s

    .pop-title
      text-align center
      font-size 14px
      width 100%
      line-height 1
      margin-top 15px
      margin-bottom 12px
      color #000000
      
.moveIn-enter-active, .moveIn-leave-active
  transition transform 0.5s

.moveIn-enter, .moveIn-leave-to /* .fade-leave-active below version 2.1.8 */
  transform translateY(100%)

.fadeIn-enter-active, .fadeIn-leave-active
  transition opacity 0.5s

.fadeIn-enter, .fadeIn-leave-to /* .fade-leave-active below version 2.1.8 */
  opacity 0