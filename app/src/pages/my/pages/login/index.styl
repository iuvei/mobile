.login
  width 100%
  font-size 14px

  >>>
    .animation1
      width 50% !important
      transform translateX(0) !important

    .animation2
      width 50% !important
      transform translateX(100%) !important

  .navbar
    background none

    &:after
      border-bottom-width 0

  .logo
    height 160px
    display flex
    justify-content center
    align-items center

    img
      height 60px

  .login-tabs
    >>>
      .van-cell
        padding-right 0 !important

      .van-tabs__nav
        margin 0 15px
        border-bottom 1px solid 
        background-color  transparent!important

      .van-tabs__nav--line
        padding-bottom 0
        box-sizing border-box

      .van-tabs__line
        bottom 0

      .van-hairline--top-bottom::after
        border-width 0

      .van-tab
        background none
        font-size 16px
        background-color  transparent!important        

      .van-tab__pane
        .group-form
          padding-right 15px
          font-size 14px

          &.top
            margin-bottom 30px

          .van-field
            position relative

            .van-field__button
              button
                height 24px
                line-height 24px
                font-size 14px
                border none
                background none
                padding 0
                text-align right
                position absolute
                top 0
                bottom 0
                right 0
                margin auto

          .code
            height 24px

            img
              height 100%

    .remmber-forget
      margin 10px 15px 0 
      display flex
      align-items center
      justify-content space-between

      >>>
        .van-checkbox
          .van-checkbox__icon
            .icon-hc-tick
              font-size 12px

          .van-checkbox__label
            margin-left 5px

  .login-btn
    margin  17px 15px 19px

  .freeplay-register
    margin 0 15px

    .freeplay
      float left

    .register
      float right

  .steam-login
    position absolute
    bottom 6px
    width 100%
    text-align center

    span
      line-height 16px
