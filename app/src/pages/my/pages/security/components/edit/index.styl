.security-edit
  width 100%
  flex 1
  display flex
  flex-direction column

  .container
    flex 1
    overflow auto
    padding-bottom 0.266667rem

    .button
      height 24px
      line-height 24px
      border none
      padding 0
      font-size 14px
      background none

    .img
      width 100%
      height 227px
      background-size 100% 100%
      background-repeat no-repeat

    .submit
      color #FFFFFF
      margin 0 15px
      width 345px
      display block
      margin-top 18px

    .footer
      font-size 12px
      line-height 20px
      text-align left
      margin 15px 0 18px 16px