.recharge-container
  width 100%
  flex 1
  display flex
  flex-direction column

  .recharge-main-container
    flex 1
    overflow hidden
    display flex
    flex-direction column

    .empty
      margin-top 110px
      display flex
      flex-direction column
      align-items center

      .iconfont
        font-size 74px
        color #e4e4e4

      p
        font-size 14px
        color #BBB
        margin-top 15px

  >>>
    .van-tabs--line
      padding-top 0
      flex 1
      display flex
      flex-direction column

      .van-tabs__wrap
        position relative

      .van-tabs__content
        flex 1
        display flex
        flex-direction column

        .van-tab__pane
          flex 1
          display flex
          flex-direction column

.moveIn-enter-active, .moveIn-leave-active
  transition transform 0.5s

.moveIn-enter, .moveIn-leave-to /* .fade-leave-active below version 2.1.8 */
  transform translateX(-100%)