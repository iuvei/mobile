*
  box-sizing border-box

.effective-orders-container
  font-size 14px
  width 100%
  display flex
  flex-direction column

  .header-right
    display flex
    justify-content center
    align-items center

    .iconfont
      font-size 24px

  .effective-orders-main-container
    flex 1
    position relative
    display flex
    flex-direction column

    .effective-orders-table-container
      flex 1
      overflow hidden
      .no-data
        padding-top 40px
      table
        width 100%
        line-height 20px

        .cell
          padding 8px 0
          &.center
            text-align center
            padding-right 0

        thead th .cell
          color #FFF
          background-color #C0C0C0

        thead th:not(:last-child) .cell
          border-right 1px solid #FFF

        tbody tr td .cell
          text-align right
          background-color #FFF
          border-bottom 1px solid #EDEDED
          color #777
          padding-right 5px

        tbody tr.summary td .cell
          background-color #F8F8F8

        tbody tr td:not(:last-child) .cell
          border-right 1px solid #EDEDED

    .menu-container
      position fixed
      top 0
      bottom 0
      left 0
      right 0
      z-index 100
      color #8E8E8E

      .menu-bg
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background-color rgba(0, 0, 0, 0.45)

      .menu-list
        position absolute
        bottom 0
        background-color #ffffff
        z-index 5
        width 100%
        padding 5px

        .menu-item
          height 50px
          display flex
          justify-content center
          align-items center
          border 1px solid #e9e9e9
          border-radius 5px
          margin 5px

          &.active
            color #FFF

        .date-list
          display flex
          padding 5px
          height 50px

          .date-item
            flex 1
            height 40px
            display flex
            align-items center
            justify-content center

            &:first-child
              border-radius 5px 0 0 5px

            &:last-child
              border-radius 0 5px 5px 0

        .btn-item
          padding 5px

          .btn
            width 100%
            height 40px
            border-radius 5px
            background-color #ffffff

            &.query
              color #FFF

.moveIn-enter-active, .moveIn-leave-active
  transition transform 0.5s

.moveIn-enter, .moveIn-leave-to /* .fade-leave-active below version 2.1.8 */
  transform translateY(100%)

.fadeIn-enter-active, .fadeIn-leave-active
  transition opacity 0.5s

.fadeIn-enter, .fadeIn-leave-to /* .fade-leave-active below version 2.1.8 */
  opacity 0