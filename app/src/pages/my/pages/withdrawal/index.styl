$notice-color = #9D9C9C
$table-th-color = #C0C0C0

.withdrawal
  width 100%
  font-size 14px
  padding-top 46px
  overflow-x hidden
  overflow-y scroll

  .container
    flex 1
    overflow hidden
    position absolute
    left 0
    top 1.226667rem
    right 0
    bottom 0

    .pre-withdrawal
      .group1
        .bank-icon
          width 16px
          height 16px

        .amount-input
          margin-top 10px
          padding 0
          width 100%
          height 42px
          line-height 42px
          font-size 14px
          border-radius 3px

        .available-amount
          display flex
          align-items center
          justify-content space-between

          div
            .total
              font-size 14px
              font-weight bold

            .no-fee-times
              line-height 18px
              font-size 12px

            .van-button
              border-radius 15px
              padding 0 12px

      .group2
        margin 10px 0

      ul.notice
        margin 20px 0
        padding 0 16px
        font-size 12px
        line-height 14px
        color $notice-color

        li
          margin 6px 0

      .pre-application-btn
        margin 10px 12px

    .conf-withdrawal
      padding-bottom 46px

      ul
        display flex
        justify-content space-between

        li
          height 84px
          width 33.3%
          text-align center
          display flex
          flex-direction column
          justify-content center
          line-height 26px

      .group3
        margin 10px 0
        padding 10px 0

        >>>
          .van-cell
            padding 2px 14px

            &:after
              border-bottom none

      .audit-detail
        font-size 12px

        .no-audit-data
          text-align center

        .appl-time
          margin-bottom 12px
          padding-left 12px

        table
          width 100%
          margin-bottom 14px
          line-height 26px

          tr
            th
              text-align left
              background $table-th-color
              border 1px solid $table-th-color
              color #FFF
              text-indent 10px

            td
              width 50%
              border 1px solid $table-th-color
              text-indent 10px

              .icon
                float right
                transform translateY(-6px) rotate(90deg)

  .withdradal-btns
    position fixed
    bottom 0
    left 0
    width 100%
    height 60px
    z-index 10
    display flex
    box-sizing border-box
    padding 10px 15px
    justify-content space-between

    .btn
      width 167px
      height 40px
      line-height 40px
      text-align center
      border-radius 3px
