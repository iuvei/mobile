*
  box-sizing border-box

.orders-container
  font-size 14px
  width 100%
  display flex
  flex-direction column

  .header-right
    display flex
    justify-content center
    align-items center

    .iconfont
      font-size 24px

  .orders-main-container
    flex 1
    position relative
    display flex
    flex-direction column

    .orders-summary-container
      padding 15px 0
      display flex
      height 85px
      background-color #FFF
      margin-bottom 10px

      .orders-summary-item
        display flex
        flex 1
        justify-content center
        flex-direction column
        align-items center
        line-height 20px
        &:not(:last-child)
          border-right 1px solid #E6E6E6
        .item-label, .item-val
          color #777

    .orders-data-container
      flex 1
      overflow hidden

      .orders-data-list
        .item-left
          .item-name
            color #777
          .item-dd
            color #bbb
            font-size 12px

        .item-content
          font-size 12px
          color #777

          .transverse
            display flex
            line-height 16px

            .item-info-label
              width 70px

            .item-info-value
              flex 1

        >>>
          .van-collapse .van-collapse-item
            .van-cell__value, .van-icon
              display flex
              justify-content flex-end
              align-items center

            .van-collapse-item__content
              background-color #F5F5F5

    .menu-container
      position fixed
      top 0
      bottom 0
      left 0
      right 0
      z-index 100
      color #8E8E8E

      .menu-bg
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background-color rgba(0, 0, 0, 0.45)

      .menu-list
        position absolute
        bottom 0
        background-color #ffffff
        z-index 5
        width 100%
        padding 5px

        .menu-item
          height 50px
          display flex
          justify-content center
          align-items center
          border 1px solid #e9e9e9
          border-radius 5px
          margin 5px

          &.active
            color #FFF

        .date-list
          display flex
          padding 5px
          height 50px

          .date-item
            flex 1
            height 40px
            display flex
            align-items center
            justify-content center

            &:first-child
              border-radius 5px 0 0 5px

            &:last-child
              border-radius 0 5px 5px 0

        .btn-item
          padding 5px

          .btn
            width 100%
            height 40px
            border-radius 5px
            background-color #ffffff

            &.query
              color #FFF

.moveIn-enter-active, .moveIn-leave-active
  transition transform 0.5s

.moveIn-enter, .moveIn-leave-to /* .fade-leave-active below version 2.1.8 */
  transform translateY(100%)

.fadeIn-enter-active, .fadeIn-leave-active
  transition opacity 0.5s

.fadeIn-enter, .fadeIn-leave-to /* .fade-leave-active below version 2.1.8 */
  opacity 0