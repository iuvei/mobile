*
  box-sizing border-box

.sales-container
  font-size 14px
  width 100%
  display flex
  flex-direction column

  .sales-main-container
    flex 1
    position relative
    display flex
    flex-direction column

    .sales-data-container
      flex 1
      overflow hidden

      .sales-data-list
        .sales-data-item
          padding 18px 16px
          background-color #FFF
          border-bottom 1px solid #E9E9E9

          .transverse
            display flex
            line-height 20px
            font-size 12px

            .item-value
              color #777777
              flex 1
              text-align right

    .custom-date-container
      display flex

      .custom-date-from, .custom-date-to
        height 25px
        line-height 25px
        flex 1

      .custom-date-query
        height 25px
        button
          background-color transparent
          width 60px
          height 25px
          -webkit-appearance:none