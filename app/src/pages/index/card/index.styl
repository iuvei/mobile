@import '~@/styles/card/variable.styl'

*
  box-sizing border-box

.index-card-container
  width 100%
  flex 1
  display flex
  flex-direction column
  background-color $base-bg-color

  .van-nav-bar
    background-color #FFF !important

  .logo
    display flex
    align-items center
    justify-content center
    height 46px

    img
      height 26px

  .header-right
    color $base-main-font-color

  .header-left
    display flex
    align-items center
    color $base-main-font-color

    .iconfont
      font-size 20px

    .text
      margin-left 5px
      font-size 14px
      font-weight 400

  .container
    flex 1
    overflow auto
    -webkit-overflow-scrolling touch

    &::after
      min-height cale(100% + 1px)

    .banner
      img
        width 100%
        display block

    .index-card-quick-access-container
      display flex
      padding 0 14px

      .index-card-quick-access-item
        flex 1
        display flex
        flex-direction column
        align-items center
        margin 11px 0 13px

        img
          width 50px
          height 52px

        span
          font-size 12px
          color #999

    .index-card-recommend-container
      padding 0 12px
      margin-bottom 9px

      .index-card-recommend-item
        position relative
        display flex
        justify-content center
        align-items center

        &::after
          content attr(title)
          position absolute
          background-color rgba(0, 0, 0, 0.35)
          font-size 16px
          color #ffffff
          display flex
          justify-content center
          align-items center

      .index-card-recommend-main
        width 100%
        display flex

        .index-card-recommend-mian-left
          .index-card-recommend-item
            background-image url('~@/pages/index/img/card/entrance-1.png')
            background-size 117px 204px
            width 117px
            height 204px

            img
              width 105px
              height 105px

            &::after
              width 111px
              left 3px
              bottom 7px
              height 29px
              border-radius 0 0 8px 8px

        .index-card-recommend-mian-right
          display flex
          flex-flow row wrap
          height 204px
          width 234px

          .index-card-recommend-item
            width 117px
            height 102px
            background-size 117px 102px

            img
              width 90px
              height 90px

            &::after
              width 112px
              left 2.8px
              bottom 6px
              height 24px
              border-radius 0 0 8px 8px
              font-size 13px

            &:nth-child(1)
              background-image url('~@/pages/index/img/card/entrance-2.png')

            &:nth-child(2)
              background-image url('~@/pages/index/img/card/entrance-3.png')

            &:nth-child(3)
              background-image url('~@/pages/index/img/card/entrance-4.png')

            &:nth-child(4)
              background-image url('~@/pages/index/img/card/entrance-5.png')

      .index-card-recommend-auxiliary
        width 100%
        display flex
        height 72px
        justify-content space-between

        .index-card-recommend-item
          width 88px
          height 72px
          background-size 88px 72px
          padding-bottom 4px

          img
            width 64px
            height 64px

          &::after
            width 82px
            left 2.8px
            bottom 6px
            height 19px
            border-radius 0 0 8px 8px
            font-size 12px

          &:nth-child(1)
            background-image url('~@/pages/index/img/card/entrance-6.png')

          &:nth-child(2)
            background-image url('~@/pages/index/img/card/entrance-7.png')

          &:nth-child(3)
            background-image url('~@/pages/index/img/card/entrance-8.png')

          &:nth-child(4)
            background-image url('~@/pages/index/img/card/entrance-9.png')

    .index-card-categorys-container
      margin 0 14px 10px
      background-color #ffffff
      border-radius 8px
      padding 0 10px
      font-size 14px

      .index-card-categorys-title
        height 35px
        color #000
        border-bottom 1px solid #eee
        display flex
        align-items center
        font-weight bold

      .index-card-categorys-content
        display flex
        flex-flow row wrap
        padding 3px 0 7px

        .index-card-category-item
          width 108px
          display flex
          height 44px
          align-items center
          color #555

          .index-card-category-icon
            width 18px
            height 18px
            background-size 18px 18px
            background-repeat no-repeat
            margin-left 2px
            margin-right 4px

            &.card
              background-image url('~@/pages/index/img/card/icon-card.png')

            &.egame
              background-image url('~@/pages/index/img/card/icon-egame.png')

            &.esport
              background-image url('~@/pages/index/img/card/icon-esport.png')

            &.live
              background-image url('~@/pages/index/img/card/icon-live.png')

            &.lottery
              background-image url('~@/pages/index/img/card/icon-lottery.png')

            &.sport
              background-image url('~@/pages/index/img/card/icon-sport.png')

            &.wait
              background-image url('~@/pages/index/img/card/icon-wait.png')

          p
            line-height 18px

          &:nth-child(3n)
            justify-content flex-end

          &:nth-child(3n+1)
            justify-content flex-start

          &:nth-child(3n+2)
            justify-content center

    .index-card-hots-container
      margin 0 14px 10px
      background-color #ffffff
      border-radius 8px
      font-size 14px

      .index-card-hots-title
        padding 0 10px
        height 35px
        color #000
        display flex
        align-items center
        font-weight bold

      .index-card-hots-content
        padding 3px 0 11px
        display flex
        flex-wrap nowrap
        overflow-x scroll
        -webkit-overflow-scrolling touch

        .index-card-hot-item
          flex 0 0 auto
          text-align center
          margin 0 9px

          img
            width 68px
            margin-bottom 4px
            border-radius 20px
            box-shadow 0 0 8px #dcdcdc

          p
            font-size 12px
            color #555

    .index-card-winner-list-container
      margin 0 14px 0
      font-size 14px
      padding-bottom 10px

      .index-card-winner-list-title
        height 40px
        color #000
        display flex
        align-items center
        font-weight bold
        background-color #FFF
        padding 5px 10px 0
        border-radius 8px 8px 0 0

      .index-card-winner-list-content
        height 140px
        font-size 12px
        overflow hidden
        background-color #FFF
        padding 0 10px
        border-radius 0 0 8px 8px

        .scroller
          .index-card-winner-item
            height 28px
            width 100%
            display flex
            align-items center

            .index-card-winner-info
              flex 1
              color #999

            .index-card-winner-purchase
              flex 1
              color #555

            .index-card-winner-harvest
              flex 1
              display flex
              align-items center

              img
                width 16px
                height 16px
                margin-right 3px

              span
                color #FF635B
                white-space nowrap