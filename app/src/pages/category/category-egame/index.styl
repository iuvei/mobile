.category-egame-container
  background-color #F5F5F5
  flex 1
  display flex
  flex-direction column
  background-color #F4F4F4
  overflow-x hidden
  overflow-y scroll
  font-size 14px

  .container
    flex 1
    width 100%
    position absolute
    top 44px
    bottom 0
    overflow hidden
    z-index 1

    .scoller
      .banner
        img
          width 100%

      .list-wrap
        padding 20px 13px 20px 17px
        overflow hidden

        .wrap
          width 170px
          height 79px
          float left
          margin-bottom 10px

          &:last-child
            margin-bottom 0

          &.right
            margin-left 5px

          img
            width 100%

        .wrap1
          width 345px
          float left
          margin-bottom 10px

          &:last-child
            margin-bottom 0

          img
            width 100%