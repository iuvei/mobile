.category-esport-container
  padding-top 46px
  font-size 14px

  .container
    flex 1
    overflow hidden
    position absolute
    left 0
    top 46px
    right 0
    bottom 0

    .van-swipe
      .van-swipe-item
        img
          width 100%
          display block

    ul.game-list
      padding 20px 16px 0
      display flex
      flex-wrap wrap

      li
        width calc(((100% - 10px) / 3))
        height 140px
        border-radius 5px
        margin-bottom 10px
        margin-right 5px

        &:nth-child(3n+3)
          margin-right 0

        img
          width 100%
          height 100%