.category-lottery-container
  padding-top 46px
  font-size 14px

  .container
    flex 1
    overflow hidden
    position absolute
    left 0
    top 46px
    right 0
    bottom 0

    .van-swipe
      .van-swipe-item
        img
          width 100%
          display block

    ul.game-list
      padding 20px 16px 0

      li
        width 100%
        height 80px
        border-radius 5px
        margin-bottom 10px

        img
          width 100%
          height 100%