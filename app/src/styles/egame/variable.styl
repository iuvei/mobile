// -----------------------------------------

// 背景色
$base-bg-color = #17122C // 基础背景颜色
$base-bg-color-nav = #3f2c74 // 导航栏底色(header, footer)
$base-bg-color-content = #1e1734 // 内容底：有内容的区域都要盖底色
$base-bg-color-input = #161026 // 文本输入框底色
$base-bg-color-divide = #110d1e // 分割线颜色
$base-bg-color-indicator = #FFE349 // banner小圆点颜色，tab-item activated颜色
$base-bg-color-button-start = $base-bg-color-indicator // button渐变色起点
$base-bg-color-button-end = #F7A91C // button渐变色终点
$base-bg-color-button-disabled = #C7AE2C // button不可点击
$base-bg-color-button-cancle = transparent // button 取消
// 字体颜色
$base-text-color-error = #FF5235 // 异常或金额为负的色调
$base-text-color-success = #2BC205 // 成功或金额为正的色调
$base-text-color-assistant = #61aaff // 按钮辅助色
$base-text-color-input = #60616e // 输入框文字颜色
$base-text-color-title = #e0defc // 单元标题文字颜色
$base-text-color-content-main = #bbbbcc // 字-内文主，例如表单的内容部分的字体颜色
$base-text-color-content-sub = #7b7c8c // 字-内文次， 例如表单下方的小子备注颜色
$base-text-color-button = #333 // button文字颜色
$base-text-color-button-cancle = #E7D057 // button cancel 文字颜色，边框颜色
