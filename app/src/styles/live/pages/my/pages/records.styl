.records-container
  .header-right
    color $base-link-btn-color
  .records-main-container
    background $base-bg-color
    .scroller
      .records-summary-container
        background $base-content-bg-color
        .records-summary-item
          &:not(:last-child)
            border-right-color $base-bg-color-divide
          .records-summary-item-row
            color #777
            .green
              color $base-success-color
      .records-data-container
        background $base-bg-color
        .records-data-item
          background $base-content-bg-color

    .menu-container
      .menu-list
        background-color $base-content-bg-color
        .menu-item
          border-color #666
          color $base-main-font-color
          &.active
            background-color $base-main-color
            color #33312B

        .date-list
          .date-item
            background-color $base-bg-color

            &.active
              color $base-main-color

        .btn-item
          .btn
            border 1px solid $base-main-color

            &.query
              background-color $base-main-color
              color #33312B
            &.cancel
              background none
              color $base-main-color